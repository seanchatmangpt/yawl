# =============================================================================
# YAWL Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control
# =============================================================================

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------
YAWL_VERSION=6.0.0-Alpha
DOMAIN=yawl.local
ENVIRONMENT=production
LOG_LEVEL=INFO
YAWL_LOG_LEVEL=DEBUG

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=yawl
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=yawl
DB_HOST=postgres
DB_PORT=5432

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
JWT_SIGNING_KEY=CHANGE_ME_TO_RANDOM_256_BIT_KEY
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# -----------------------------------------------------------------------------
# TLS/SSL Configuration (Let's Encrypt)
# -----------------------------------------------------------------------------
ACME_EMAIL=admin@yawl.local

# -----------------------------------------------------------------------------
# Alerting Configuration (Slack)
# -----------------------------------------------------------------------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXX/XXXX/XXXX

# -----------------------------------------------------------------------------
# Alerting Configuration (Email/SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=yawl@example.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_FROM=yawl@example.com
ALERT_EMAIL_CRITICAL=ops-critical@example.com
ALERT_EMAIL_DB=dba@example.com
ALERT_EMAIL_ENGINE=engine-team@example.com

# -----------------------------------------------------------------------------
# Alerting Configuration (PagerDuty)
# -----------------------------------------------------------------------------
PAGERDUTY_SERVICE_KEY=CHANGE_ME_PAGERDUTY_KEY

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
PROMETHEUS_RETENTION=30d
PROMETHEUS_STORAGE_SIZE=10GB
LOKI_RETENTION=31d
