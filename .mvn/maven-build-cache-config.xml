<?xml version="1.0" encoding="UTF-8"?>
<!-- Maven Build Cache Configuration -->
<cache xmlns="http://maven.apache.org/BUILD-CACHE-CONFIG/1.1.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://maven.apache.org/BUILD-CACHE-CONFIG/1.1.0 https://maven.apache.org/xsd/build-cache-config-1.1.0.xsd">

    <!-- Enable local cache -->
    <localCache enabled="true"/>

    <!-- Cache remote artifacts -->
    <remoteCache enabled="false"/>

    <!-- Project configuration -->
    <configuration>
        <enabled>true</enabled>
        <hashAlgorithm>SHA-256</hashAlgorithm>
    </configuration>

    <!-- Lifecycle goals to cache -->
    <lifecycleExecution>
        <goals>compile,test-compile</goals>
    </lifecycleExecution>

</cache>
