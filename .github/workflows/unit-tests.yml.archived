# Run YAWL unit tests inside yawl-dev container.
# Fails the build if tests fail or error.
name: Unit Tests
on:
  push:
    branches: [master, main]
  pull_request:
    branches: [master, main]
jobs:
  unit-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Run unit tests
        run: |
          docker compose run --rm yawl-dev ./scripts/run-unit-tests.sh
        env:
          DOCKER_BUILDKIT: 1
