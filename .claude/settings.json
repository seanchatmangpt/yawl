{
  "project": {
    "name": "YAWL (Yet Another Workflow Language)",
    "version": "6.0.0-Alpha",
    "description": "BPM/Workflow system with powerful modelling language",
    "buildSystem": "Maven",
    "mainLanguage": "Java",
    "javaVersion": "25",
    "environment": "Docker/DevContainer Only"
  },
  "ide": {
    "type": "Maven",
    "buildFile": "pom.xml"
  },
  "testing": {
    "framework": "JUnit",
    "command": "mvn test",
    "coverage": false
  },
  "development": {
    "sourceDir": "src",
    "testDir": "test",
    "buildDir": "target",
    "outputDir": "output"
  },
  "notes": {
    "environment": "Dual-track: Docker/DevContainer (local) + Claude Code Web (remote)",
    "hooks": "Omnipresent Rust hook system: Ψ facts injected at every prompt (65ms)",
    "webSessions": "Supported via SessionStart hook (Maven proxy + H2 database)",
    "hookArchitecture": "yawl-hooks binary handles 7 events: UserPromptSubmit/PreToolUse[Write|Edit|Bash]/PostToolUse[Write|Edit|Bash]/PostToolUseFailure/PermissionRequest/Stop/PreCompact",
    "guardCoverage": "14 Java hyper-standards patterns (PreToolUse Write|Edit) + 7 Ω-gate Bash patterns (PreToolUse Bash)"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh",
            "timeout": 120,
            "statusMessage": "Setting up YAWL environment..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 5,
            "statusMessage": "Ψ refreshing facts..."
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 5,
            "statusMessage": "Checking guards + blast radius..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 30,
            "async": true,
            "statusMessage": "Refreshing Ψ facts in background..."
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 5,
            "statusMessage": "Checking build results..."
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 5,
            "statusMessage": "Capturing failure context..."
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 5,
            "statusMessage": "Checking permissions..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 10,
            "statusMessage": "Ψ quality + git gate..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/observatory/target/release/yawl-hooks",
            "timeout": 5,
            "statusMessage": "Preserving Ψ facts across context compression..."
          }
        ]
      }
    ]
  },
  "documentation": {
    "mainGuide": ".claude/BEST-PRACTICES-2026.md",
    "quickStart": ".claude/README-QUICK.md",
    "standards": ".claude/HYPER_STANDARDS.md",
    "packageDocs": "All 89 packages have package-info.java files"
  },
  "bestPractices": {
    "guards": "14 Java anti-patterns (Write|Edit PreToolUse) + 7 Bash Ω-gate patterns (Bash PreToolUse)",
    "verification": "bash scripts/dx.sh compile after each batch",
    "commits": "Include session URL in commit messages",
    "branching": "claude/<description>-<sessionId> format",
    "documentation": "AI-first: entry points + boundaries + purpose"
  }
}
