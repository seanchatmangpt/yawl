{
  "project": {
    "name": "YAWL (Yet Another Workflow Language)",
    "version": "5.2",
    "description": "BPM/Workflow system with powerful modelling language",
    "buildSystem": "Ant",
    "mainLanguage": "Java",
    "javaVersion": "11+",
    "environment": "Docker/DevContainer Only"
  },
  "ide": {
    "type": "Ant",
    "buildFile": "build/build.xml"
  },
  "testing": {
    "framework": "JUnit",
    "command": "ant unitTest",
    "coverage": false
  },
  "development": {
    "sourceDir": "src",
    "testDir": "test",
    "buildDir": "classes",
    "outputDir": "output"
  },
  "notes": {
    "environment": "This project runs only in Docker/DevContainer",
    "hooks": "Hyper-validation enabled: PostToolUse validates all Write/Edit operations",
    "webSessions": "Claude Code Web is not supported for this project"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/hyper-validate.sh",
            "timeout": 30,
            "statusMessage": "Validating Fortune 5 standards..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/validate-no-mocks.sh",
            "timeout": 60,
            "statusMessage": "Final quality gate check..."
          }
        ]
      }
    ]
  }
}
