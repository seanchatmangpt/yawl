{
  "project": {
    "name": "YAWL (Yet Another Workflow Language)",
    "version": "6.0.0-Alpha",
    "description": "BPM/Workflow system with powerful modelling language",
    "buildSystem": "Maven",
    "mainLanguage": "Java",
    "javaVersion": "25",
    "environment": "Docker/DevContainer Only"
  },
  "ide": {
    "type": "Maven",
    "buildFile": "pom.xml"
  },
  "testing": {
    "framework": "JUnit",
    "command": "mvn test",
    "coverage": false
  },
  "development": {
    "sourceDir": "src",
    "testDir": "test",
    "buildDir": "target",
    "outputDir": "output"
  },
  "notes": {
    "environment": "Dual-track: Docker/DevContainer (local) + Claude Code Web (remote)",
    "hooks": "Hyper-validation enabled: PostToolUse validates all Write/Edit operations",
    "webSessions": "Supported via SessionStart hook (Ant install + H2 database)"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh",
            "timeout": 120,
            "statusMessage": "Setting up YAWL environment..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/hyper-validate.sh",
            "timeout": 30,
            "statusMessage": "Validating H (Guards) - checking for anti-patterns..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop-hook-git-check.sh",
            "timeout": 10,
            "statusMessage": "Verifying git state..."
          }
        ]
      }
    ]
  },
  "documentation": {
    "mainGuide": ".claude/BEST-PRACTICES-2026.md",
    "quickStart": ".claude/README-QUICK.md",
    "standards": ".claude/HYPER_STANDARDS.md",
    "packageDocs": "All 89 packages have package-info.java files"
  },
  "bestPractices": {
    "guards": "14 anti-patterns blocked by hyper-validate.sh",
    "verification": "ant compile after each batch",
    "commits": "Include session URL in commit messages",
    "branching": "claude/<description>-<sessionId> format",
    "documentation": "AI-first: entry points + boundaries + purpose"
  }
}
