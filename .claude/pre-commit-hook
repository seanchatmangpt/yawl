#!/bin/bash
# YAWL Pre-Commit Hook - Enforce Zero Tolerance Standards
# Install: ln -s ../../.claude/pre-commit-hook .git/hooks/pre-commit

echo "Running YAWL code quality validation..."
echo ""

# Run validation
./.claude/validate-no-mocks.sh

if [ $? -ne 0 ]; then
    echo ""
    echo "=========================================="
    echo "❌ COMMIT BLOCKED"
    echo "=========================================="
    echo ""
    echo "Your commit contains FORBIDDEN patterns."
    echo ""
    echo "Fortune 5 Production Standards:"
    echo "  • NO mocks"
    echo "  • NO stubs"
    echo "  • NO TODOs"
    echo "  • NO fallbacks"
    echo "  • NO lies"
    echo ""
    echo "Fix violations and try again."
    echo "See CLAUDE.md for details."
    echo ""
    exit 1
fi

echo ""
echo "✅ Code quality check passed"
exit 0
