{
  "$schema": "https://yawl.foundation/schemas/a2a/agent-card.schema.json",
  "agent_uri": "http://localhost:8091/agent",
  "name": "YAWL Coder Agent",
  "description": "Autonomous coding agent that generates, modifies, and tests YAWL workflow specifications",
  "version": "6.0.0",
  "capabilities": {
    "streaming": true,
    "async": true,
    "consensus": true,
    "max_concurrent_tasks": 10,
    "supported_languages": ["java", "xml", "xsd", "json"],
    "consensus_strategies": ["majority_vote", "supermajority", "unanimous"]
  },
  "authentication": {
    "schemes": ["spiffe", "bearer", "api_key"],
    "spiffe_trust_domain": "yawl.foundation",
    "api_key_header": "X-YAWL-API-Key"
  },
  "skills": [
    {
      "name": "generate_code",
      "description": "Generate Java code from natural language specification",
      "input_schema": {
        "type": "object",
        "properties": {
          "specification": {"type": "string"},
          "language": {"type": "string", "enum": ["java", "xml"]},
          "style": {"type": "string", "enum": ["minimal", "comprehensive", "production"]}
        },
        "required": ["specification"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "code": {"type": "string"},
          "language": {"type": "string"},
          "tests_generated": {"type": "boolean"}
        }
      }
    },
    {
      "name": "review_code",
      "description": "Review code for quality, security, and compliance",
      "input_schema": {
        "type": "object",
        "properties": {
          "code": {"type": "string"},
          "check_types": {
            "type": "array",
            "items": {"enum": ["security", "performance", "style", "correctness"]}
          }
        },
        "required": ["code"]
      }
    },
    {
      "name": "run_tests",
      "description": "Execute tests and report results",
      "input_schema": {
        "type": "object",
        "properties": {
          "test_filter": {"type": "string"},
          "coverage_threshold": {"type": "number", "minimum": 0, "maximum": 100}
        }
      }
    }
  ],
  "endpoints": {
    "jsonrpc": "http://localhost:8091/rpc",
    "health": "http://localhost:8091/health",
    "metrics": "http://localhost:8091/metrics",
    "well_known": "http://localhost:8091/.well-known/agent.json"
  },
  "metadata": {
    "owner": "YAWL Foundation",
    "created_at": "2026-02-18T00:00:00Z",
    "environment": "production",
    "tags": ["coding", "testing", "workflow", "yawl"]
  }
}
