{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Initialize Request",
  "description": "Request to initialize MCP server connection",
  "type": "object",
  "properties": {
    "protocolVersion": {
      "type": "string",
      "enum": ["2024-11-05"],
      "description": "Protocol version to use"
    },
    "capabilities": {
      "type": "object",
      "description": "Server capabilities",
      "properties": {
        "roots": {
          "type": "object",
          "properties": {
            "listChanged": {
              "type": "boolean",
              "description": "Whether server supports listing changed roots"
            },
            "readResources": {
              "type": "boolean",
              "description": "Whether server supports reading resources"
            }
          },
          "required": ["listChanged", "readResources"]
        },
        "tools": {
          "type": "object",
          "properties": {
            "listChanged": {
              "type": "boolean",
              "description": "Whether server supports listing changed tools"
            }
          },
          "required": ["listChanged"]
        }
      },
      "required": ["roots", "tools"]
    },
    "clientInfo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Client name"
        },
        "version": {
          "type": "string",
          "description": "Client version"
        }
      },
      "required": ["name"]
    }
  },
  "required": ["protocolVersion", "capabilities", "clientInfo"],
  "examples": [
    {
      "description": "Initialize Request for YAWL MCP Server",
      "value": {
        "protocolVersion": "2024-11-05",
        "capabilities": {
          "roots": {
            "listChanged": true,
            "readResources": true
          },
          "tools": {
            "listChanged": true
          }
        },
        "clientInfo": {
          "name": "yawl-client",
          "version": "1.0.0"
        }
      }
    }
  ]
}
