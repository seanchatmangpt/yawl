<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.yawlfoundation</groupId>
        <artifactId>yawl-parent</artifactId>
        <version>6.0.0-GA</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>yawl-data-modelling</artifactId>
    <packaging>jar</packaging>
    <name>YAWL Data Modelling — Thin WASM Facade</name>
    <description>
        Thin Java facade over the data-modelling-sdk WebAssembly module (v2.3.0).
        Exposes 70+ schema operations — ODCS/ODPS/CADS/OpenAPI/BPMN/DMN import-export,
        decision records (MADR), knowledge base (KB), sketches, domain organisation,
        and validation — without reimplementing any logic in Java.

        All computation runs inside data_modelling_wasm_bg.wasm via GraalJS+WASM
        polyglot (same pattern as yawl-graalwasm Rust4pmBridge). The Java layer is
        a 1:1 mapping of WASM exports to typed Java methods + JSON string returns.

        SDK source: github.com/OffeneDatenmodellierung/data-modelling-sdk v2.3.0
        License: MIT
    </description>

    <dependencies>
        <!-- yawl-graalwasm: WasmExecutionEngine + WasmModule -->
        <dependency>
            <groupId>org.yawlfoundation</groupId>
            <artifactId>yawl-graalwasm</artifactId>
        </dependency>
        <!-- yawl-graaljs: JavaScriptExecutionEngine for JS+WASM polyglot context -->
        <dependency>
            <groupId>org.yawlfoundation</groupId>
            <artifactId>yawl-graaljs</artifactId>
        </dependency>
        <!-- GraalVM Polyglot API (transitive, declared for compilation) -->
        <dependency>
            <groupId>org.graalvm.polyglot</groupId>
            <artifactId>polyglot</artifactId>
        </dependency>
        <!-- GraalVM JavaScript language runtime — needed for js.ECMAScript-version option.
             POM-type deps are not transitive from yawl-graaljs; declare explicitly. -->
        <dependency>
            <groupId>org.graalvm.polyglot</groupId>
            <artifactId>js</artifactId>
            <version>${graalvm.version}</version>
            <type>pom</type>
        </dependency>
        <!-- GraalVM WASM language runtime (for JS+WASM polyglot context) -->
        <dependency>
            <groupId>org.graalvm.polyglot</groupId>
            <artifactId>wasm</artifactId>
            <version>${graalvm.version}</version>
            <type>pom</type>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jspecify</groupId>
            <artifactId>jspecify</artifactId>
        </dependency>
        <!-- Testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- JMH microbenchmark dependencies -->
        <dependency>
            <groupId>org.openjdk.jmh</groupId>
            <artifactId>jmh-core</artifactId>
            <version>${jmh.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.openjdk.jmh</groupId>
            <artifactId>jmh-generator-annprocess</artifactId>
            <version>${jmh.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>../src</sourceDirectory>
        <testSourceDirectory>../test</testSourceDirectory>

        <!-- Module-local resources: WASM binary + JS glue are module-specific,
             not in the shared ../src tree. -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <compilerArgs><arg>--enable-preview</arg></compilerArgs>
                    <includes>
                        <include>**/org/yawlfoundation/yawl/datamodelling/**</include>
                    </includes>
                    <testIncludes>
                        <testInclude>**/org/yawlfoundation/yawl/datamodelling/**</testInclude>
                    </testIncludes>
                </configuration>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <configuration>
                            <compilerArgs>
                                <arg>--enable-preview</arg>
                            </compilerArgs>
                            <testIncludes>
                                <testInclude>**/org/yawlfoundation/yawl/datamodelling/**</testInclude>
                            </testIncludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/org/yawlfoundation/yawl/datamodelling/**Test.java</include>
                        <include>**/*Benchmark.java</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>
                    </plugins>
    </build>
</project>
