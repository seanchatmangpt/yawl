<?xml version="1.0" encoding="UTF-8"?>
<yawl:specification xmlns:yawl="http://www.yawlfoundation.org/yawl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.yawlfoundation.org/yawl http://www.yawlfoundation.org/yawl/YAWL_Schema4.0.xsd">
  <metaData>
    <identification>minimal-test</identification>
    <name>Minimal Test Workflow</name>
    <version>1.0</version>
    <contributor>YAWL E2E Test Suite</contributor>
    <description>A minimal workflow for testing E2E integrations</description>
    <date>$(date +%Y-%m-%d)</date>
  </metaData>
  <processSchema>
    <inputCondition>
      <flows>
        <inputFlow from="start" to="task1"/>
      </flows>
    </inputCondition>
    <outputCondition>
      <flows>
        <outputFlow from="task1" to="finish"/>
      </flows>
    </outputCondition>
    <tasks>
      <task id="task1">
        <name>Simple Task</name>
        <description>A basic task for testing</description>
        <inputCondition>
          <flows>
            <inputFlow from="start" to="task1"/>
          </flows>
        </inputCondition>
        <outputCondition>
          <flows>
            <outputFlow from="task1" to="finish"/>
          </flows>
        </outputCondition>
      </task>
    </tasks>
    <gateways/>
  </processSchema>
</yawl:specification>