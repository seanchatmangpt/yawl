%%{ init: { 'theme': 'base', 'themeVariables': { 'primaryColor': '#2d3748' } } }%%
graph TD
    classDef green_score fill:#38a169,stroke:#2f855a,color:#fff
    classDef yellow_score fill:#d69e2e,stroke:#b7791f,color:#fff
    classDef red_score fill:#e53e3e,stroke:#c53030,color:#fff
    classDef green_status fill:#c6f6d5,stroke:#38a169,color:#2d3748
    classDef yellow_status fill:#fefcbf,stroke:#d69e2e,color:#2d3748
    classDef red_status fill:#fed7d7,stroke:#e53e3e,color:#2d3748
    classDef tool_ok fill:#38a169,stroke:#2f855a,color:#fff
    classDef tool_warning fill:#d69e2e,stroke:#b7791f,color:#fff
    classDef tool_error fill:#e53e3e,stroke:#c53030,color:#fff
    classDef header fill:#4a5568,stroke:#2d3748,color:#fff

    HEADER["YAWL V6 Code Health Dashboard<br/>2026-02-18"]:::header

    subgraph ScorePanel["Health Score"]
        HEALTH_SCORE["100/100"]:::green_score
        HEALTH_STATUS["GREEN"]:::green_status
    end

    subgraph AnalysisTools["Static Analysis Tools"]
        SPOTBUGS["SpotBugs<br/>0 findings"]:::tool_ok
        PMD["PMD<br/>0 violations"]:::tool_ok
        CHECKSTYLE["Checkstyle<br/>0 warnings"]:::tool_ok
    end

    subgraph HealthMetrics["Health Indicators"]
        M_BUGS["Bug Detection"]
        M_QUALITY["Code Quality"]
        M_STYLE["Style Compliance"]
    end

    HEADER --> ScorePanel
    HEADER --> AnalysisTools

    SPOTBUGS --> M_BUGS
    PMD --> M_QUALITY
    CHECKSTYLE --> M_STYLE

    M_BUGS -.->|contributes| HEALTH_SCORE
    M_QUALITY -.->|contributes| HEALTH_SCORE
    M_STYLE -.->|contributes| HEALTH_SCORE

    %% Legend
    subgraph Legend["Legend"]
        L_OK["0 issues"]:::tool_ok
        L_WARN["1-10 issues"]:::tool_warning
        L_ERR[">10 issues"]:::tool_error
    end
