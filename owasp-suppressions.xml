<?xml version="1.0" encoding="UTF-8"?>
<!--
  OWASP Dependency Check Suppressions

  This file contains suppression rules for known false positives
  or accepted risks in YAWL dependencies.

  Review these suppressions quarterly and remove when fixed.
-->
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">

    <!--
      False Positives
      These CVEs are incorrectly flagged for our dependencies
    -->

    <!-- Twitter4j - Used only by twitterService (optional service) -->
    <suppress>
        <notes>
            Twitter4j CVEs relate to API authentication issues.
            The twitterService is an optional service and not required for core YAWL operation.
            Users should disable twitterService if not needed.
        </notes>
        <packageUrl regex="true">^pkg:maven/org\.twitter4j/twitter4j\-core@.*$</packageUrl>
        <cpe>cpe:/a:twitter4j:twitter4j</cpe>
    </suppress>

    <!-- JUNG - Graph visualization library for Proclet Service -->
    <suppress>
        <notes>
            JUNG library CVEs are typically low severity UI issues.
            Used only in Proclet Service for graph visualization.
            Not exposed to external input in YAWL.
        </notes>
        <packageUrl regex="true">^pkg:maven/net\.sf\.jung/jung.*@.*$</packageUrl>
    </suppress>

    <!--
      Accepted Risks
      These are known issues that are acceptable for YAWL
    -->

    <!-- H2 Database - Test/Development only -->
    <suppress until="2026-06-01">
        <notes>
            H2 database is used only for testing and development.
            Production deployments use PostgreSQL or MySQL.
            Will upgrade H2 when JPA migration to Hibernate 6 is complete.
        </notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2@.*$</packageUrl>
        <cvssBelow>7.0</cvssBelow>
    </suppress>

    <!--
      Transitive Dependencies
      These are pulled in by other libraries and can't be easily upgraded
    -->

    <!-- ANTLR 2.7.7 - Required by Hibernate -->
    <suppress>
        <notes>
            ANTLR 2.7.7 is a transitive dependency of Hibernate.
            Will be resolved when Hibernate 6 migration is complete.
        </notes>
        <packageUrl regex="true">^pkg:maven/antlr/antlr@2\.7\.7$</packageUrl>
        <cvssBelow>7.0</cvssBelow>
    </suppress>

    <!--
      Planned Upgrades
      These will be addressed in upcoming releases
    -->

    <!-- JSF Libraries - Legacy Resource Service UI -->
    <suppress until="2026-09-01">
        <notes>
            JSF libraries are used by the legacy Resource Service web UI.
            Planned migration to modern React/Vue frontend in v5.3.
            Until then, Resource Service should be deployed behind firewall.
        </notes>
        <packageUrl regex="true">^pkg:maven/.*jsf.*@.*$</packageUrl>
        <cvssBelow>8.0</cvssBelow>
    </suppress>

</suppressions>
