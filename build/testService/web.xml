<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>TestService</display-name>
    <description>
      A time service
    </description>

<context-param>
	<param-name>InterfaceBWebSideController</param-name>
	<param-value>org.yawlfoundation.yawl.testService.TestService</param-value>
</context-param>

<context-param>
    <param-name>InterfaceB_BackEnd</param-name>   
 	<param-value>http://localhost:8080/yawl/ib</param-value>
	</context-param>

    <!--CharsetFilter -->

     <filter>
       <filter-name>CharsetFilter</filter-name>
       <filter-class>org.yawlfoundation.yawl.util.CharsetFilter</filter-class>
         <init-param>
           <param-name>requestEncoding</param-name>
           <param-value>UTF-8</param-value>
         </init-param>
     </filter>

     <filter-mapping>
       <filter-name>CharsetFilter</filter-name>
       <url-pattern>/*</url-pattern>
     </filter-mapping>

    <!-- CORS Filter for REST API -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.yawlfoundation.yawl.engine.interfce.rest.CorsFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

<servlet>
  <servlet-name>testService</servlet-name>
  <servlet-class>
      org.yawlfoundation.yawl.engine.interfce.interfaceB.InterfaceB_EnvironmentBasedServer
  </servlet-class>
  <load-on-startup>1</load-on-startup>
</servlet>

<servlet-mapping>
  <servlet-name>testService</servlet-name>
  <url-pattern>/ib</url-pattern>
</servlet-mapping>

    <servlet>
      <servlet-name>WorkletEventListener</servlet-name>
      <servlet-class>
          org.yawlfoundation.yawl.testService.TestWorkletListener
      </servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>WorkletEventListener</servlet-name>
      <url-pattern>/workletport</url-pattern>
    </servlet-mapping>

    <!-- JAX-RS REST API Configuration -->
    <servlet>
        <servlet-name>JerseyServlet</servlet-name>
        <description>
            JAX-RS servlet for modern REST API endpoints.
            Provides JSON-based REST APIs for Test Service operations.
        </description>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jakarta.ws.rs.Application</param-name>
            <param-value>org.yawlfoundation.yawl.engine.interfce.rest.YawlRestApplication</param-value>
        </init-param>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>org.yawlfoundation.yawl.engine.interfce.rest</param-value>
        </init-param>
        <load-on-startup>5</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>JerseyServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

</web-app>
