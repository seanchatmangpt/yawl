<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
  YAWL v5.2 Checkstyle Configuration
  Based on Google Java Style Guide with YAWL-specific adjustments.

  Standard: HYPER_STANDARDS compliant
  Severity: warning (enforcement via CI gate, not compile-time failure)
  Suppressions: checkstyle-suppressions.xml
-->
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>
    <property name="fileExtensions" value="java"/>

    <!-- =====================================================================
         FILE-LEVEL CHECKS
         ===================================================================== -->

    <!-- Maximum file length: 2000 lines for production, 500 for test -->
    <module name="FileLength">
        <property name="max" value="2000"/>
    </module>

    <!-- Tabs forbidden - use 4 spaces -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- Line length: 120 characters maximum -->
    <module name="LineLength">
        <property name="max" value="120"/>
        <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://|ftp://"/>
    </module>

    <!-- Newline at end of file -->
    <module name="NewlineAtEndOfFile">
        <property name="lineSeparator" value="lf"/>
    </module>

    <!-- Trailing whitespace -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="minimum" value="0"/>
        <property name="maximum" value="0"/>
        <property name="message" value="Line has trailing whitespace."/>
    </module>

    <!-- =====================================================================
         SUPPRESSIONS - allow overrides per file
         ===================================================================== -->
    <module name="SuppressionFilter">
        <property name="file" value="${config_loc}/checkstyle-suppressions.xml"/>
        <property name="optional" value="true"/>
    </module>

    <!-- =====================================================================
         TREE-WALKER CHECKS (AST-based)
         ===================================================================== -->
    <module name="TreeWalker">

        <!-- =================================================================
             NAMING CONVENTIONS
             ================================================================= -->

        <!-- Package names: lowercase only, no underscores -->
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
            <message key="name.invalidPattern"
                     value="Package name ''{0}'' must be lower case."/>
        </module>

        <!-- Class/Interface names: UpperCamelCase -->
        <module name="TypeName">
            <property name="tokens" value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, ANNOTATION_DEF, RECORD_DEF"/>
            <message key="name.invalidPattern"
                     value="Type name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- Method names: lowerCamelCase -->
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Method name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- Parameter names: lowerCamelCase -->
        <module name="ParameterName">
            <property name="format" value="^[a-z]([a-zA-Z0-9]*)?$"/>
            <message key="name.invalidPattern"
                     value="Parameter name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- Local variable names: lowerCamelCase -->
        <module name="LocalVariableName">
            <property name="format" value="^[a-z]([a-zA-Z0-9]*)?$"/>
            <message key="name.invalidPattern"
                     value="Local variable name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- Constant names: UPPER_SNAKE_CASE -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
        </module>

        <!-- Member variable names: lowerCamelCase (prefix underscore forbidden) -->
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
            <message key="name.invalidPattern"
                     value="Member name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- Type parameter names: single capital letter or T-suffix pattern -->
        <module name="ClassTypeParameterName">
            <property name="format" value="(^[A-Z][0-9]?)$|([A-Z][a-zA-Z0-9]*[T]$)"/>
            <message key="name.invalidPattern"
                     value="Class type name ''{0}'' must match pattern ''{1}''."/>
        </module>

        <!-- =================================================================
             IMPORTS
             ================================================================= -->

        <!-- No wildcard imports - explicit imports only -->
        <module name="AvoidStarImport"/>

        <!-- No static imports from test frameworks in production src/ -->
        <module name="IllegalImport">
            <property name="illegalPkgs" value="sun, com.sun, jdk.internal"/>
        </module>

        <!-- Duplicate imports -->
        <module name="RedundantImport"/>

        <!-- Unused imports -->
        <module name="UnusedImports">
            <property name="processJavadoc" value="false"/>
        </module>

        <!-- Import ordering: static first, then java, then javax/jakarta, then third-party, then project -->
        <module name="ImportOrder">
            <property name="groups" value="/^static /,/^java/,/^javax/,/^jakarta/,/^org\.yawlfoundation/"/>
            <property name="ordered" value="true"/>
            <property name="separated" value="true"/>
            <property name="option" value="top"/>
            <property name="sortStaticImportsAlphabetically" value="true"/>
        </module>

        <!-- =================================================================
             JAVADOC
             ================================================================= -->

        <!-- All public types require Javadoc -->
        <module name="MissingJavadocType">
            <property name="scope" value="public"/>
            <property name="tokens" value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, RECORD_DEF, ANNOTATION_DEF"/>
            <property name="skipAnnotations" value="Override, Deprecated, FunctionalInterface"/>
        </module>

        <!-- All public methods require Javadoc -->
        <module name="MissingJavadocMethod">
            <property name="scope" value="public"/>
            <property name="minLineCount" value="3"/>
            <property name="allowedAnnotations" value="Override, Deprecated, Test, Before, After, BeforeAll, AfterAll"/>
            <property name="tokens" value="METHOD_DEF, ANNOTATION_FIELD_DEF, COMPACT_CTOR_DEF"/>
        </module>

        <!-- Javadoc must have non-empty summary -->
        <module name="NonEmptyAtclauseDescription"/>

        <!-- Javadoc paragraphs: correct format -->
        <module name="JavadocParagraph"/>

        <!-- No @author tags - use git blame -->
        <module name="JavadocTagContinuationIndentation"/>

        <!-- =================================================================
             CODING
             ================================================================= -->

        <!-- Array type style: String[] args NOT String args[] -->
        <module name="ArrayTypeStyle"/>

        <!-- Explicit initialisation to default not required -->
        <module name="ExplicitInitialization"/>

        <!-- Magic numbers: only 0, 1, 2 permitted without constant -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1, 0, 1, 2, 3, 4, 8, 10, 16, 100, 1000"/>
            <property name="ignoreAnnotation" value="true"/>
            <property name="ignoreFieldDeclaration" value="true"/>
            <property name="ignoreHashCodeMethod" value="true"/>
        </module>

        <!-- No nested ternary expressions -->
        <module name="AvoidNestedBlocks"/>

        <!-- equals() should never throw NullPointerException -->
        <module name="EqualsAvoidNull"/>

        <!-- Avoid assignment in conditions: while ((line = r.readLine()) != null) is OK -->
        <module name="InnerAssignment">
            <property name="tokens" value="ASSIGN, DIV_ASSIGN, PLUS_ASSIGN, MINUS_ASSIGN,
                STAR_ASSIGN, MOD_ASSIGN, SR_ASSIGN, BSR_ASSIGN, SL_ASSIGN,
                BXOR_ASSIGN, BOR_ASSIGN, BAND_ASSIGN"/>
        </module>

        <!-- Avoid empty catch blocks without comment explaining why -->
        <module name="EmptyCatchBlock">
            <property name="exceptionVariableName" value="expected|ignore|ignored"/>
        </module>

        <!-- Require this. for instance variables (prevents confusion with parameters) -->
        <!-- Disabled: too noisy for large codebase, enforced via review -->

        <!-- Covariant equals: override equals(Object) when overriding equals(T) -->
        <module name="CovariantEquals"/>

        <!-- String literal equality: use .equals() not == -->
        <module name="StringLiteralEquality"/>

        <!-- Avoid double-checked locking without volatile -->
        <!-- Covered by SpotBugs -->

        <!-- =================================================================
             BLOCKS
             ================================================================= -->

        <!-- Braces required for all control structures -->
        <module name="NeedBraces">
            <property name="tokens" value="LITERAL_DO, LITERAL_ELSE, LITERAL_FOR, LITERAL_IF, LITERAL_WHILE"/>
        </module>

        <!-- Left brace on same line -->
        <module name="LeftCurly"/>

        <!-- Right brace on own line -->
        <module name="RightCurly"/>

        <!-- =================================================================
             CLASS DESIGN
             ================================================================= -->

        <!-- Utility classes must have private constructor -->
        <module name="HideUtilityClassConstructor"/>

        <!-- Interfaces must have methods (not just constants) -->
        <!-- Disabled: YAWL has marker interfaces -->

        <!-- Mutable exceptions: exception classes should be immutable where possible -->
        <!-- Too strict for large codebase -->

        <!-- =================================================================
             METRICS
             ================================================================= -->

        <!-- Cyclomatic complexity: max 15 (enforced via PMD as well) -->
        <module name="CyclomaticComplexity">
            <property name="max" value="15"/>
        </module>

        <!-- Method length: max 80 lines -->
        <module name="MethodLength">
            <property name="max" value="80"/>
            <property name="countEmpty" value="false"/>
        </module>

        <!-- Parameter count: max 7 -->
        <module name="ParameterNumber">
            <property name="max" value="7"/>
            <property name="tokens" value="METHOD_DEF, CTOR_DEF"/>
        </module>

        <!-- =================================================================
             WHITESPACE
             ================================================================= -->

        <module name="EmptyLineSeparator">
            <property name="tokens" value="PACKAGE_DEF, IMPORT, STATIC_IMPORT, CLASS_DEF,
                INTERFACE_DEF, ENUM_DEF, STATIC_INIT, INSTANCE_INIT,
                METHOD_DEF, CTOR_DEF, VARIABLE_DEF, RECORD_DEF, COMPACT_CTOR_DEF"/>
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
        </module>

        <module name="GenericWhitespace">
            <message key="ws.followed"
                     value="GenericWhitespace ''{0}'' is followed by whitespace."/>
            <message key="ws.preceded"
                     value="GenericWhitespace ''{0}'' is preceded with whitespace."/>
            <message key="ws.illegalFollow"
                     value="GenericWhitespace ''{0}'' should followed by whitespace."/>
            <message key="ws.notPreceded"
                     value="GenericWhitespace ''{0}'' is not preceded with whitespace."/>
        </module>

        <module name="MethodParamPad">
            <property name="tokens" value="CTOR_DEF, LITERAL_NEW, METHOD_CALL, METHOD_DEF,
                SUPER_CTOR_CALL, ENUM_CONSTANT_DEF, RECORD_DEF"/>
        </module>

        <module name="NoWhitespaceBefore">
            <property name="tokens" value="COMMA, SEMI, POST_INC, POST_DEC, DOT,
                LABELED_STAT, METHOD_REF"/>
            <property name="allowLineBreaks" value="true"/>
        </module>

        <module name="WhitespaceAround">
            <property name="allowEmptyConstructors" value="true"/>
            <property name="allowEmptyLambdas" value="true"/>
            <property name="allowEmptyMethods" value="true"/>
            <property name="allowEmptyTypes" value="true"/>
            <property name="allowEmptyLoops" value="true"/>
            <property name="ignoreEnhancedForColon" value="false"/>
            <property name="tokens" value="ASSIGN, BAND, BAND_ASSIGN, BOR, BOR_ASSIGN, BSR,
                BSR_ASSIGN, BXOR, BXOR_ASSIGN, COLON, DIV, DIV_ASSIGN, DO_WHILE, EQUAL,
                GE, GT, LAMBDA, LAND, LCURLY, LE, LITERAL_CATCH, LITERAL_DO, LITERAL_ELSE,
                LITERAL_FINALLY, LITERAL_FOR, LITERAL_IF, LITERAL_RETURN, LITERAL_SWITCH,
                LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE, LOR, LT, MINUS,
                MINUS_ASSIGN, MOD, MOD_ASSIGN, NOT_EQUAL, PLUS, PLUS_ASSIGN, QUESTION,
                RCURLY, SL, SLIST, SL_ASSIGN, SR, SR_ASSIGN, STAR, STAR_ASSIGN,
                LITERAL_ASSERT, TYPE_EXTENSION_AND"/>
            <message key="ws.notFollowed"
                     value="WhitespaceAround: ''{0}'' is not followed by whitespace. Empty blocks may only be written as '{}' when not part of a multi-block statement (4.1.3)"/>
            <message key="ws.notPreceded"
                     value="WhitespaceAround: ''{0}'' is not preceded with whitespace."/>
        </module>

        <!-- =================================================================
             MODIFIERS
             ================================================================= -->

        <!-- Modifier order: public protected private abstract default static final ... -->
        <module name="ModifierOrder"/>

        <!-- Redundant modifiers in interfaces -->
        <module name="RedundantModifier"/>

        <!-- =================================================================
             ANNOTATIONS
             ================================================================= -->

        <!-- @Override on overriding methods -->
        <module name="MissingOverride"/>

        <!-- Annotations on own line above the annotated element -->
        <module name="AnnotationLocation">
            <property name="id" value="AnnotationLocationMostCases"/>
            <property name="tokens" value="CLASS_DEF, INTERFACE_DEF, ENUM_DEF, METHOD_DEF, CTOR_DEF,
                RECORD_DEF, COMPACT_CTOR_DEF"/>
        </module>
        <module name="AnnotationLocation">
            <property name="id" value="AnnotationLocationVariables"/>
            <property name="tokens" value="VARIABLE_DEF"/>
            <property name="allowSamelineMultipleAnnotations" value="true"/>
        </module>

    </module>

</module>
