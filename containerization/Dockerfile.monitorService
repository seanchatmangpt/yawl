# =============================================================================
# YAWL Monitor Service Dockerfile
# =============================================================================
# Process monitoring and management
# =============================================================================

# Build stage - use Debian-based image which has ant
FROM eclipse-temurin:25-jdk AS builder

ARG YAWL_VERSION=5.2

# Install build dependencies (Debian-based)
RUN apt-get update && apt-get install -y ant curl && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy source files (layered for caching)
COPY build/3rdParty/ ./build/3rdParty/
COPY build/build.xml ./build/
COPY build/build.properties ./build/
COPY build/properties/ ./build/properties/
COPY build/monitorService/ ./build/monitorService/

COPY schema/ ./schema/
COPY src/ ./src/
COPY exampleSpecs/ ./exampleSpecs/
COPY graphics/ ./graphics/

# Copy antTask for custom Ant tasks
COPY antTask/ ./antTask/

# Copy checksums for build verification
COPY checksums/ ./checksums/

# Build monitor service WAR
RUN cd build && ant compile && ant build_monitorService.war

# =============================================================================
# Runtime stage
# =============================================================================
FROM eclipse-temurin:25-jre AS runtime

ARG YAWL_VERSION=5.2
ARG TOMCAT_VERSION=9.0.89

LABEL org.opencontainers.image.title="YAWL Monitor Service"
LABEL org.opencontainers.image.description="YAWL Monitor Service - Process Monitoring"
LABEL org.opencontainers.image.version="${YAWL_VERSION}"
LABEL org.opencontainers.image.vendor="YAWL Foundation"
LABEL org.opencontainers.image.service="monitor-service"

# Install runtime dependencies
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r yawl && \
    useradd -r -g yawl -d /yawl -s /sbin/nologin yawl && \
    mkdir -p /yawl /opt/tomcat /data/monitor && \
    chown -R yawl:yawl /yawl /opt/tomcat /data

# Download and configure Tomcat
RUN curl -fsSL "https://archive.apache.org/dist/tomcat/tomcat-9/v${TOMCAT_VERSION}/bin/apache-tomcat-${TOMCAT_VERSION}.tar.gz" \
    | tar -xzf - -C /opt/tomcat --strip-components=1 && \
    rm -rf /opt/tomcat/webapps/* /opt/tomcat/webapps.dist && \
    sed -i 's/<Connector port="8080"/<Connector port="8080" URIEncoding="UTF-8"/' \
    /opt/tomcat/conf/server.xml && \
    chown -R yawl:yawl /opt/tomcat

# Copy built WAR from builder
COPY --from=builder --chown=yawl:yawl /build/output/monitorService.war /opt/tomcat/webapps/ROOT.war

# Copy shared libraries (excluding servlet-api which conflicts with Tomcat's)
COPY --from=builder --chown=yawl:yawl /build/build/3rdParty/lib/*.jar /tmp/libs/
RUN cd /opt/tomcat/lib && \
    for jar in /tmp/libs/*.jar; do \
      [ "$(basename $jar)" != "servlet-api.jar" ] && cp "$jar" .; \
    done && \
    rm -rf /tmp/libs

# Environment configuration
ENV CATALINA_HOME=/opt/tomcat \
    JAVA_OPTS="-Xms256m -Xmx512m -Djava.awt.headless=true -Dfile.encoding=UTF-8" \
    TZ=UTC \
    YAWL_VERSION=${YAWL_VERSION} \
    ENGINE_URL=http://engine:8080/ib \
    RESOURCE_SERVICE_URL=http://resource-service:8080/ib \
    LOG_LEVEL=WARN

# Expose ports
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=90s --retries=3 \
    CMD curl -f http://localhost:8080/ || exit 1

# Switch to non-root user
USER yawl

WORKDIR /yawl

CMD ["/opt/tomcat/bin/catalina.sh", "run"]
