<?xml version="1.0" encoding="UTF-8"?>
<!--
  Log4j 2 Test Configuration for YAWL
  Optimized for test execution:
  - Console-only output (no file I/O overhead)
  - DEBUG level for YAWL code
  - WARN level for third-party libraries
  - Pattern includes thread name for parallel test debugging
-->
<Configuration status="ERROR" shutdownHook="disable">
    <Properties>
        <Property name="testPattern">%d{HH:mm:ss.SSS} [%t] %-5p %c{1.} - %m%n</Property>
    </Properties>

    <Appenders>
        <Console name="TEST_CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="${testPattern}"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- YAWL packages at DEBUG for test visibility -->
        <Logger name="org.yawlfoundation.yawl" level="DEBUG" additivity="false">
            <AppenderRef ref="TEST_CONSOLE"/>
        </Logger>

        <!-- Suppress verbose third-party logging in tests -->
        <Logger name="org.hibernate" level="WARN"/>
        <Logger name="org.springframework" level="WARN"/>
        <Logger name="org.apache.commons" level="WARN"/>
        <Logger name="com.zaxxer.hikari" level="WARN"/>

        <Root level="INFO">
            <AppenderRef ref="TEST_CONSOLE"/>
        </Root>
    </Loggers>
</Configuration>
