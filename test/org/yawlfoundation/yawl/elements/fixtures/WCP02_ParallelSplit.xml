<?xml version="1.0" encoding="UTF-8"?>
<!-- WCP2: Parallel Split Pattern (AND-split) - Single thread splits into multiple parallel threads -->
<specificationSet xmlns="http://www.citi.qut.edu.au/yawl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="Beta 4">
  <specification uri="WCP02_ParallelSplit">
    <metaData/>
    <schema xmlns="http://www.w3.org/2001/XMLSchema"/>
    <decomposition id="ParallelSplitNet" isRootNet="true" xsi:type="NetFactsType">
      <processControlElements>
        <inputCondition id="input">
          <flowsInto>
            <nextElementRef id="splitTask"/>
          </flowsInto>
        </inputCondition>
        <task id="splitTask">
          <flowsInto>
            <nextElementRef id="branchA"/>
          </flowsInto>
          <flowsInto>
            <nextElementRef id="branchB"/>
          </flowsInto>
          <flowsInto>
            <nextElementRef id="branchC"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="SplitDecomposition"/>
        </task>
        <task id="branchA">
          <flowsInto>
            <nextElementRef id="output"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="BranchADecomposition"/>
        </task>
        <task id="branchB">
          <flowsInto>
            <nextElementRef id="output"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="BranchBDecomposition"/>
        </task>
        <task id="branchC">
          <flowsInto>
            <nextElementRef id="output"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="BranchCDecomposition"/>
        </task>
        <outputCondition id="output"/>
      </processControlElements>
    </decomposition>
    <decomposition id="SplitDecomposition" xsi:type="WebServiceGatewayFactsType"/>
    <decomposition id="BranchADecomposition" xsi:type="WebServiceGatewayFactsType"/>
    <decomposition id="BranchBDecomposition" xsi:type="WebServiceGatewayFactsType"/>
    <decomposition id="BranchCDecomposition" xsi:type="WebServiceGatewayFactsType"/>
  </specification>
</specificationSet>
