<?xml version="1.0" encoding="UTF-8"?>
<!-- Combined XOR-split/XOR-join Pattern - Exclusive choice with simple merge -->
<specificationSet xmlns="http://www.citi.qut.edu.au/yawl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="Beta 4">
  <specification uri="WCP11_XORSplitJoin">
    <metaData/>
    <schema xmlns="http://www.w3.org/2001/XMLSchema"/>
    <decomposition id="XORSplitJoinNet" isRootNet="true" xsi:type="NetFactsType">
      <processControlElements>
        <inputCondition id="input">
          <flowsInto>
            <nextElementRef id="splitTask"/>
          </flowsInto>
        </inputCondition>
        <task id="splitTask">
          <flowsInto>
            <nextElementRef id="branchA"/>
            <predicate ordering="1">true()</predicate>
          </flowsInto>
          <flowsInto>
            <nextElementRef id="branchB"/>
            <isDefaultFlow/>
          </flowsInto>
          <join code="xor"/>
          <split code="xor"/>
          <decomposesTo id="SplitDecomposition"/>
        </task>
        <task id="branchA">
          <flowsInto>
            <nextElementRef id="joinTask"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="BranchADecomposition"/>
        </task>
        <task id="branchB">
          <flowsInto>
            <nextElementRef id="joinTask"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="BranchBDecomposition"/>
        </task>
        <task id="joinTask">
          <flowsInto>
            <nextElementRef id="output"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
          <decomposesTo id="JoinDecomposition"/>
        </task>
        <outputCondition id="output"/>
      </processControlElements>
    </decomposition>
    <decomposition id="SplitDecomposition" xsi:type="WebServiceGatewayFactsType"/>
    <decomposition id="BranchADecomposition" xsi:type="WebServiceGatewayFactsType"/>
    <decomposition id="BranchBDecomposition" xsi:type="WebServiceGatewayFactsType"/>
    <decomposition id="JoinDecomposition" xsi:type="WebServiceGatewayFactsType"/>
  </specification>
</specificationSet>
