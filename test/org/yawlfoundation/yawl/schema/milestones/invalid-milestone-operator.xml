<?xml version="1.0" encoding="UTF-8"?>
<specificationSet version="4.0" xmlns="http://www.yawlfoundation.org/yawlschema"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.yawlfoundation.org/yawlschema http://www.yawlfoundation.org/yawlschema/YAWL_Schema4.0.xsd">
  <specification uri="InvalidProcess">
    <name>Invalid Milestone Operator</name>
    <documentation>Invalid operator value</documentation>
    <metaData/>
    <decomposition id="root" xsi:type="NetFactsType" isRootNet="true">
      <name>Invalid Net</name>
      <processControlElements>
        <inputCondition id="input">
          <name>Start</name>
          <flowsInto>
            <nextElementRef id="Task1"/>
          </flowsInto>
        </inputCondition>
        <task id="Task1">
          <name>Task 1</name>
          <flowsInto>
            <nextElementRef id="Milestone1"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
        </task>
        <milestone id="Milestone1">
          <name>Milestone 1</name>
          <flowsInto>
            <nextElementRef id="Task2"/>
          </flowsInto>
          <expression>//status = 'OK'</expression>
          <expiryType>NEVER</expiryType>
          <expiryTimeout>0</expiryTimeout>
        </milestone>
        <task id="Task2">
          <name>Task 2</name>
          <flowsInto>
            <nextElementRef id="output"/>
          </flowsInto>
          <join code="and"/>
          <split code="xor"/>
          <milestoneGuards operator="INVALID">
            <guard>
              <milestoneRef id="Milestone1"/>
            </guard>
          </milestoneGuards>
        </task>
        <outputCondition id="output">
          <name>End</name>
        </outputCondition>
      </processControlElements>
    </decomposition>
  </specification>
</specificationSet>
