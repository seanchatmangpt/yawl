{
  "name": "YAWL Development",
  "image": "mcr.microsoft.com/devcontainers/java:21",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "postCreateCommand": "apt-get update && apt-get install -y ant && ant -version",
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.java",
        "vscjava.vscode-java-test",
        "vscjava.vscode-maven",
        "Apache.NetBeans"
      ],
      "settings": {
        "java.configuration.runtimes": [
          {
            "name": "JavaSE-21",
            "path": "/usr/local/sdkman/candidates/java/21.0.10-tem",
            "default": true
          }
        ]
      }
    }
  },
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.m2,target=/home/vscode/.m2,type=bind,consistency=cached"
  ],
  "forwardPorts": [8080, 8081],
  "portsAttributes": {
    "8080": {
      "label": "YAWL Engine",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Tomcat",
      "onAutoForward": "notify"
    }
  }
}
