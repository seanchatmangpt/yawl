<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.yawlfoundation</groupId>
        <artifactId>yawl-parent</artifactId>
        <version>6.0.0-Alpha</version>
    <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>yawl-utilities</artifactId>
    <packaging>jar</packaging>

    <name>YAWL Utilities</name>
    <description>Common utilities - authentication, logging, schema handling, unmarshal tools</description>

    <dependencies>
        <!-- Apache Commons -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
        </dependency>

        <!-- XML Processing -->
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom2</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>../src</sourceDirectory>
        <testSourceDirectory>../test</testSourceDirectory>
        <resources>
            <!-- Copy schema XSD files to schema/ directory -->
            <resource>
                <directory>../schema</directory>
                <targetPath>schema</targetPath>
                <includes>
                    <include>**/*.xsd</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <!-- Copy XSD files from unmarshal package to classpath (required for schema validation) -->
            <resource>
                <directory>../src</directory>
                <includes>
                    <include>**/org/yawlfoundation/yawl/unmarshal/*.xsd</include>
                </includes>
            </resource>
        </resources>

        <!-- Copy test resources preserving package structure for getClass().getResource() -->
        <testResources>
            <testResource>
                <directory>../test</directory>
                <includes>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.xsd</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.properties</include>
                </includes>
            </testResource>
            <!-- Common test resources directory -->
            <testResource>
                <directory>../test/resources</directory>
            </testResource>
        </testResources>

        <plugins>
            <!-- Clean plugin with failOnError=false to handle 9p overlay filesystem -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <failOnError>false</failOnError>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/org/yawlfoundation/yawl/authentication/**</include>
                        <include>**/org/yawlfoundation/yawl/logging/**</include>
                        <include>**/org/yawlfoundation/yawl/schema/**</include>
                        <include>**/org/yawlfoundation/yawl/unmarshal/**</include>
                        <include>**/org/yawlfoundation/yawl/util/**</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/**</include>
                    </includes>
                    <excludes>
                        <!-- Exclude logging classes that depend on engine - they compile in yawl-engine -->
                        <exclude>**/org/yawlfoundation/yawl/logging/YEventLogger.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YEventKeyCache.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogPredicate.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogPredicateWorkItemParser.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogServer.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YXESBuilder.java</exclude>
                        <exclude>**/*.xsd</exclude>
                        <exclude>**/*.xml</exclude>
                        <exclude>**/*.properties</exclude>
                    </excludes>
                    <!-- Only compile tests that depend solely on utilities module classes -->
                    <testIncludes>
                        <testInclude>**/org/yawlfoundation/yawl/exceptions/TestYConnectivityException.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/exceptions/TestYSyntaxException.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/exceptions/TestYAWLExceptionEnhancements.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/util/TestDynamicValueLogging.java</testInclude>
                    </testIncludes>
                    <testExcludes>
                        <testExclude>**/*.class</testExclude>
                    </testExcludes>
                    <!-- Disable annotation processing to prevent JMH from generating stale files -->
                    <compilerArgs>
                        <arg>-proc:none</arg>
                    </compilerArgs>
                </configuration>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <configuration>
                            <compilerArgs>
                                <arg>-proc:none</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- Only run tests that depend solely on utilities module classes -->
                    <includes>
                        <include>**/org/yawlfoundation/yawl/exceptions/TestYConnectivityException.java</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/TestYSyntaxException.java</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/TestYAWLExceptionEnhancements.java</include>
                        <include>**/org/yawlfoundation/yawl/util/TestDynamicValueLogging.java</include>
                    </includes>
                    <!-- Exclude conflicting logging bridge: log4j-to-slf4j conflicts with log4j-slf4j2-impl -->
                    <classpathDependencyExcludes>
                        <classpathDependencyExclude>org.apache.logging.log4j:log4j-to-slf4j</classpathDependencyExclude>
                    </classpathDependencyExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
