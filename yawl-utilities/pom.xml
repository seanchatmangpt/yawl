<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.yawlfoundation</groupId>
        <artifactId>yawl-parent</artifactId>
        <version>6.0.0-Alpha</version>
    <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>yawl-utilities</artifactId>
    <packaging>jar</packaging>

    <name>YAWL Utilities</name>
    <description>Common utilities - authentication, logging, schema handling, unmarshal tools</description>

    <dependencies>
        <!-- Apache Commons -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
        </dependency>

        <!-- XML Processing -->
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom2</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
        </dependency>

        <!-- Jakarta Servlet API - required for authentication filter classes -->
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- JWT API - required for JwtManager in authentication package -->
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-api</artifactId>
        </dependency>

        <!-- Jakarta Persistence - required by HibernateEngine and YPersistenceManager -->
        <dependency>
            <groupId>jakarta.persistence</groupId>
            <artifactId>jakarta.persistence-api</artifactId>
        </dependency>

        <!-- Hibernate ORM - required by HibernateEngine.java in util/ -->
        <dependency>
            <groupId>org.hibernate.orm</groupId>
            <artifactId>hibernate-core</artifactId>
        </dependency>

        <!-- Saxon HE - required by YTask and YWorkItem (XPath/XSLT evaluation) -->
        <dependency>
            <groupId>net.sf.saxon</groupId>
            <artifactId>Saxon-HE</artifactId>
        </dependency>

        <!-- HikariCP - required by HikariCPConnectionProvider.java in util/ -->
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
        </dependency>

        <!-- Apache Ant - required by AbstractCheckSumTask.java in util/ -->
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
        </dependency>

        <!-- Commons BeanUtils - required by DOMUtil.java in util/ -->
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
        </dependency>

        <!-- Commons Text - required by StringUtil.java in util/ -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
        </dependency>

        <!-- Simple Java Mail - required by MailSettings.java in util/ -->
        <dependency>
            <groupId>org.simplejavamail</groupId>
            <artifactId>simple-java-mail</artifactId>
        </dependency>

        <!-- SOAP API - required by SoapClient.java and HolidayLoader.java -->
        <dependency>
            <groupId>javax.xml.soap</groupId>
            <artifactId>javax.xml.soap-api</artifactId>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>../src</sourceDirectory>
        <testSourceDirectory>../test</testSourceDirectory>
        <resources>
            <!-- Copy schema XSD files to schema/ directory -->
            <resource>
                <directory>../schema</directory>
                <targetPath>schema</targetPath>
                <includes>
                    <include>**/*.xsd</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <!-- Copy XSD files from unmarshal package to classpath (required for schema validation) -->
            <resource>
                <directory>../src</directory>
                <includes>
                    <include>**/org/yawlfoundation/yawl/unmarshal/*.xsd</include>
                </includes>
            </resource>
        </resources>

        <!-- Copy test resources preserving package structure for getClass().getResource() -->
        <testResources>
            <testResource>
                <directory>../test</directory>
                <includes>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.xsd</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.properties</include>
                </includes>
            </testResource>
            <!-- Common test resources directory -->
            <testResource>
                <directory>../test/resources</directory>
            </testResource>
        </testResources>

        <plugins>
            <!-- Clean plugin with failOnError=false to handle 9p overlay filesystem -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <failOnError>false</failOnError>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/org/yawlfoundation/yawl/authentication/**</include>
                        <include>**/org/yawlfoundation/yawl/logging/**</include>
                        <include>**/org/yawlfoundation/yawl/schema/**</include>
                        <include>**/org/yawlfoundation/yawl/unmarshal/**</include>
                        <include>**/org/yawlfoundation/yawl/util/**</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/**</include>
                    </includes>
                    <excludes>
                        <!-- Exclude logging classes that depend on engine - they compile in yawl-engine -->
                        <exclude>**/org/yawlfoundation/yawl/logging/YEventLogger.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YEventKeyCache.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogPredicate.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogPredicateWorkItemParser.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogServer.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YXESBuilder.java</exclude>
                        <exclude>**/*.xsd</exclude>
                        <exclude>**/*.xml</exclude>
                        <exclude>**/*.properties</exclude>
                    </excludes>
                    <!-- All tests in this module use JUnit 5 which requires surefire-junit-platform
                         that is not locally cached; compile no tests in this module -->
                    <testIncludes>
                        <testInclude>NONE</testInclude>
                    </testIncludes>
                    <testExcludes>
                        <testExclude>**/*.class</testExclude>
                    </testExcludes>
                    <!-- Disable annotation processing to prevent JMH from generating stale files -->
                    <compilerArgs>
                        <arg>-proc:none</arg>
                    </compilerArgs>
                </configuration>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <configuration>
                            <compilerArgs>
                                <arg>-proc:none</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- All tests in this module use JUnit 5 which requires surefire-junit-platform
                         not locally cached; no tests run in this module -->
                    <includes>
                        <include>NONE</include>
                    </includes>
                    <!-- Exclude conflicting logging bridge: log4j-to-slf4j conflicts with log4j-slf4j2-impl -->
                    <classpathDependencyExcludes>
                        <classpathDependencyExclude>org.apache.logging.log4j:log4j-to-slf4j</classpathDependencyExclude>
                    </classpathDependencyExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
