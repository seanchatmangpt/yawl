<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.yawlfoundation</groupId>
        <artifactId>yawl-parent</artifactId>
        <version>6.0.0-Alpha</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>yawl-utilities</artifactId>
    <packaging>jar</packaging>

    <name>YAWL Utilities</name>
    <description>Common utilities - base authentication, logging, schema handling, unmarshal tools, exceptions</description>

    <dependencies>
        <!-- Apache Commons -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
        </dependency>

        <!-- JWT Authentication (required by JwtManager) -->
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-api</artifactId>
        </dependency>
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-impl</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-jackson</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- XML Processing -->
        <dependency>
            <groupId>org.jdom</groupId>
            <artifactId>jdom2</artifactId>
        </dependency>
        <dependency>
            <groupId>jaxen</groupId>
            <artifactId>jaxen</artifactId>
        </dependency>
        <dependency>
            <groupId>net.sf.saxon</groupId>
            <artifactId>Saxon-HE</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- SOAP API (required by SoapClient) -->
        <dependency>
            <groupId>javax.xml.soap</groupId>
            <artifactId>javax.xml.soap-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.messaging.saaj</groupId>
            <artifactId>saaj-impl</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- Jakarta Persistence (required by HibernateEngine) -->
        <dependency>
            <groupId>jakarta.persistence</groupId>
            <artifactId>jakarta.persistence-api</artifactId>
        </dependency>

        <!-- Jakarta Servlet (required by CharsetFilter, HttpURLValidator) -->
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
        </dependency>

        <!-- Hibernate ORM (required by HibernateEngine, HikariCPConnectionProvider) -->
        <dependency>
            <groupId>org.hibernate.orm</groupId>
            <artifactId>hibernate-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hibernate.orm</groupId>
            <artifactId>hibernate-hikaricp</artifactId>
        </dependency>

        <!-- Database Connection Pooling -->
        <dependency>
            <groupId>com.zaxxer</groupId>
            <artifactId>HikariCP</artifactId>
        </dependency>

        <!-- Database Drivers (for HibernateEngine testing and runtime) -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>runtime</scope>
        </dependency>

        <!-- Logging -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>

        <!-- Email (required by MailSettings) -->
        <dependency>
            <groupId>org.simplejavamail</groupId>
            <artifactId>simple-java-mail</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Apache Ant (required by CheckSummer tasks) -->
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Testing - JUnit 5 Jupiter (used by exception and util tests) -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- JUnit Platform Suite for @Suite annotation -->
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-suite-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-suite-engine</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Testing - JUnit 4 (legacy tests) -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Testing - Hamcrest matchers -->
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-core</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>../src</sourceDirectory>
        <testSourceDirectory>../test</testSourceDirectory>
        <resources>
            <!-- Copy schema XSD files to schema/ directory -->
            <resource>
                <directory>../schema</directory>
                <targetPath>schema</targetPath>
                <includes>
                    <include>**/*.xsd</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
            <!-- Copy XSD files from unmarshal package to classpath (required for schema validation) -->
            <resource>
                <directory>../src</directory>
                <includes>
                    <include>**/org/yawlfoundation/yawl/unmarshal/*.xsd</include>
                </includes>
            </resource>
        </resources>

        <!-- Copy test resources preserving package structure for getClass().getResource() -->
        <testResources>
            <testResource>
                <directory>../test</directory>
                <includes>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.xsd</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/**/*.properties</include>
                    <!-- Include all XML test resources needed by unmarshal tests -->
                    <include>**/org/yawlfoundation/yawl/unmarshal/MakeRecordings.xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/MakeRecordings(Beta6).xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/YAWL_Specification.xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/RemoveTokens.xml</include>
                    <include>**/org/yawlfoundation/yawl/unmarshal/CantParseThis.xml</include>
                </includes>
            </testResource>
            <!-- Common test resources directory -->
            <testResource>
                <directory>../test/resources</directory>
            </testResource>
        </testResources>

        <plugins>
            <!-- Clean plugin with failOnError=false to handle 9p overlay filesystem -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <failOnError>false</failOnError>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>**/org/yawlfoundation/yawl/authentication/**</include>
                        <include>**/org/yawlfoundation/yawl/logging/**</include>
                        <include>**/org/yawlfoundation/yawl/schema/**</include>
                        <include>**/org/yawlfoundation/yawl/unmarshal/**</include>
                        <include>**/org/yawlfoundation/yawl/util/**</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/**</include>
                    </includes>
                    <excludes>
                        <!-- Exclude authentication classes that depend on engine/elements - they compile in yawl-engine -->
                        <exclude>**/org/yawlfoundation/yawl/authentication/YSessionCache.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/authentication/YSession.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/authentication/YServiceSession.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/authentication/YExternalSession.java</exclude>
                        <!-- Exclude logging classes that depend on engine - they compile in yawl-engine -->
                        <exclude>**/org/yawlfoundation/yawl/logging/YEventLogger.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YEventKeyCache.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogPredicate.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogPredicateWorkItemParser.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YLogServer.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/logging/YXESBuilder.java</exclude>
                        <!-- Exclude util classes that depend on engine - they compile in yawl-engine -->
                        <exclude>**/org/yawlfoundation/yawl/util/AbstractEngineClient.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/util/Sessions.java</exclude>
                        <exclude>**/org/yawlfoundation/yawl/util/YIdentifierBag.java</exclude>
                        <!-- Exclude non-Java files -->
                        <exclude>**/*.xsd</exclude>
                        <exclude>**/*.xml</exclude>
                        <exclude>**/*.properties</exclude>
                        <exclude>**/*.hbm.xml</exclude>
                    </excludes>
                    <!-- Only compile tests that depend solely on utilities module classes -->
                    <!-- Patterns match both Test*.java and *Test.java naming conventions -->
                    <testIncludes>
                        <testInclude>**/org/yawlfoundation/yawl/TestInfrastructureSmokeTest.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/exceptions/Test*.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/exceptions/*Test.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/util/Test*.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/util/*Test.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/schema/Test*.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/schema/*Test.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/unmarshal/Test*.java</testInclude>
                        <testInclude>**/org/yawlfoundation/yawl/unmarshal/*Test.java</testInclude>
                    </testIncludes>
                    <testExcludes>
                        <testExclude>**/*.class</testExclude>
                    </testExcludes>
                    <!-- Disable annotation processing to prevent JMH from generating stale files -->
                    <compilerArgs>
                        <arg>-proc:none</arg>
                    </compilerArgs>
                </configuration>
                <executions>
                    <execution>
                        <id>default-testCompile</id>
                        <configuration>
                            <compilerArgs>
                                <arg>-proc:none</arg>
                            </compilerArgs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <!-- Only run tests that depend solely on utilities module classes -->
                    <!-- Patterns match both Test*.java and *Test.java naming conventions -->
                    <includes>
                        <include>**/org/yawlfoundation/yawl/TestInfrastructureSmokeTest.java</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/Test*.java</include>
                        <include>**/org/yawlfoundation/yawl/exceptions/*Test.java</include>
                        <include>**/org/yawlfoundation/yawl/util/Test*.java</include>
                        <include>**/org/yawlfoundation/yawl/util/*Test.java</include>
                        <include>**/org/yawlfoundation/yawl/schema/Test*.java</include>
                        <include>**/org/yawlfoundation/yawl/schema/*Test.java</include>
                        <include>**/org/yawlfoundation/yawl/unmarshal/Test*.java</include>
                        <include>**/org/yawlfoundation/yawl/unmarshal/*Test.java</include>
                    </includes>
                    <!-- Exclude conflicting logging bridge: log4j-to-slf4j conflicts with log4j-slf4j2-impl -->
                    <classpathDependencyExcludes>
                        <classpathDependencyExclude>org.apache.logging.log4j:log4j-to-slf4j</classpathDependencyExclude>
                    </classpathDependencyExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
