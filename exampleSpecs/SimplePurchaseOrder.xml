<?xml version="1.0" encoding="UTF-8"?>
<specificationSet version="4.0" xmlns="http://www.yawlfoundation.org/yawlschema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.yawlfoundation.org/yawlschema http://www.yawlfoundation.org/yawlschema/YAWL_Schema4.0.xsd">
  <specification uri="SimplePurchaseOrder">
    <name>Simple Purchase Order</name>
    <documentation>A purchase order workflow demonstrating YAWL v4.0 schema compliance.</documentation>
    <metaData/>
    <decomposition id="PurchaseOrderNet" xsi:type="NetFactsType" isRootNet="true">
      <name>Purchase Order Process</name>
      <processControlElements>
        <inputCondition id="start">
          <name>Start</name>
          <flowsInto>
            <nextElementRef id="CreatePO"/>
          </flowsInto>
        </inputCondition>
        <task id="CreatePO">
          <name>Create Purchase Order</name>
          <flowsInto>
            <nextElementRef id="ApprovePO"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
        </task>
        <task id="ApprovePO">
          <name>Approve Purchase Order</name>
          <flowsInto>
            <nextElementRef id="end"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
        </task>
        <outputCondition id="end">
          <name>End</name>
        </outputCondition>
      </processControlElements>
    </decomposition>
  </specification>
</specificationSet>
