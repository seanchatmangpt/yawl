<?xml version="1.0" encoding="UTF-8"?>
<specification xmlns="http://www.yawlfoundation.org/yawl" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://www.yawlfoundation.org/yawl http://www.yawlfoundation.org/yawl/yawlSchema.xsd">
    <header name="ExclusiveChoiceWorkflow" version="1.0.0"
            xmlns:yawl="http://www.yawlfoundation.org/yawl"
            xmlns:yawl:data="http://www.yawlfoundation.org/yawl/dataType">
        <documentation>
            <description>Workflow with exclusive choice testing</description>
            <author>YAWL Foundation</author>
            <version>1.0.0</version>
        </documentation>
    </header>

    <dataModel>
        <dataElements>
            <variable name="inputValue" yawl:data:Type="integer"/>
            <variable name="result1" yawl:data:Type="string"/>
            <variable name="result2" yawl:data:Type="string"/>
            <variable name="finalResult" yawl:data:Type="string"/>
        </dataElements>
    </dataModel>

    <processModel>
        <net name="ExclusiveChoiceNet" imports="ExclusiveChoiceWorkflow" exports="output">
            <inputCondition name="i" yawl:joins="AND"/>
            <outputCondition name="o" yawl:splits="AND"/>

            <task name="Decision" joins="AND" splits="OR">
                <inputConditionRef>i</inputConditionRef>
                <outputConditionRef name="choice1"/>
                <outputConditionRef name="choice2"/>
            </task>

            <task name="ProcessBranch1" joins="OR" splits="AND">
                <inputConditionRef>choice1</inputConditionRef>
                <outputConditionRef name="sync"/>
            </task>

            <task name="ProcessBranch2" joins="OR" splits="AND">
                <inputConditionRef>choice2</inputConditionRef>
                <outputConditionRef>sync</outputConditionRef>
            </task>

            <condition name="choice1" joins="OR" splits="OR"/>
            <condition name="choice2" joins="OR" splits="OR"/>
            <condition name="sync" joins="OR" splits="AND"/>
        </net>
    </processModel>

    <conditionExpressions>
        <condition name="DecisionCondition" expression="inputValue &lt; 100"/>
        <condition name="ProcessBranch1Condition" expression="inputValue &lt; 100"/>
        <condition name="ProcessBranch2Condition" expression="inputValue &gt;= 100"/>
        <condition name="choice1Condition" expression="inputValue &lt; 100"/>
        <condition name="choice2Condition" expression="inputValue &gt;= 100"/>
        <condition name="syncCondition" expression="true"/>
    </conditionExpressions>

    <synchronisationExpression
            yawl:joins="OR" yawl:splits="AND"/>
</specification>