<?xml version="1.0" encoding="UTF-8"?>
<specificationSet version="4.0" xmlns="http://www.yawlfoundation.org/yawlschema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.yawlfoundation.org/yawlschema http://www.yawlfoundation.org/yawlschema/YAWL_Schema4.0.xsd">
  <specification uri="DocumentProcessing">
    <name>Document Processing Workflow</name>
    <documentation>Demonstrates conditional routing in YAWL v4.0.</documentation>
    <metaData/>
    <decomposition id="DocumentProcessingNet" xsi:type="NetFactsType" isRootNet="true">
      <name>Document Processing</name>
      <processControlElements>
        <inputCondition id="start">
          <name>Start</name>
          <flowsInto>
            <nextElementRef id="ReceiveDoc"/>
          </flowsInto>
        </inputCondition>
        <task id="ReceiveDoc">
          <name>Receive Document</name>
          <flowsInto>
            <nextElementRef id="ReviewDoc"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
        </task>
        <task id="ReviewDoc">
          <name>Review Document</name>
          <flowsInto>
            <nextElementRef id="ApproveDoc"/>
          </flowsInto>
          <flowsInto>
            <nextElementRef id="RejectDoc"/>
            <predicate>false()</predicate>
          </flowsInto>
          <join code="xor"/>
          <split code="xor"/>
        </task>
        <task id="ApproveDoc">
          <name>Approve Document</name>
          <flowsInto>
            <nextElementRef id="Archive"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
        </task>
        <task id="RejectDoc">
          <name>Reject Document</name>
          <flowsInto>
            <nextElementRef id="Notify"/>
          </flowsInto>
          <join code="xor"/>
          <split code="and"/>
        </task>
        <condition id="Archive">
          <name>Archive</name>
          <flowsInto>
            <nextElementRef id="end"/>
          </flowsInto>
        </condition>
        <condition id="Notify">
          <name>Notify</name>
          <flowsInto>
            <nextElementRef id="end"/>
          </flowsInto>
        </condition>
        <outputCondition id="end">
          <name>End</name>
        </outputCondition>
      </processControlElements>
    </decomposition>
  </specification>
</specificationSet>
