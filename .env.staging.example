# Staging Environment Variables
# Copy to .env.staging and fill in actual values

# Database
DB_USERNAME=yawl_user
DB_PASSWORD=<CHANGE_ME>
DB_HOST=staging-db.c.yawl.internal
DB_PORT=5432
DB_NAME=yawl_staging

# Z.AI
ZAI_API_KEY=<GET_FROM_VAULT>
ZAI_TIMEOUT_MS=10000

# Security
JWT_SECRET=<GENERATE_RANDOM_KEY>
KEYSTORE_PATH=/opt/yawl/certs/keystore.jks
KEYSTORE_PASSWORD=<CHANGE_ME>

# Logging
LOG_LEVEL=DEBUG

# Monitoring
PROMETHEUS_PORT=9090
JAEGER_AGENT_HOST=jaeger-collector.monitoring.svc.cluster.local
JAEGER_AGENT_PORT=6831

# Feature Flags
FEATURE_Z_AI_INTEGRATION=true
FEATURE_MCP_SERVER=true
FEATURE_STATELESS_ENGINE=true
