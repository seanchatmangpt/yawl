{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.yawlfoundation.org/a2a/agent-card.json",
  "title": "A2A Agent Card",
  "description": "Agent capability discovery document exposed at /.well-known/agent.json",
  "type": "object",
  "required": ["name", "version", "protocols", "skills"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable agent name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9_.-]+)?$",
      "description": "Semantic version of the agent"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Brief description of the agent's purpose"
    },
    "protocols": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "url"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["a2a", "mcp"]
          },
          "version": {
            "type": "string",
            "description": "Protocol version"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Base URL for the protocol endpoint"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": {
            "type": "string",
            "maxLength": 200
          },
          "parameters": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "type", "required"],
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 50
                },
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "object", "array"]
                },
                "required": {
                  "type": "boolean",
                  "default": false
                },
                "description": {
                  "type": "string",
                  "maxLength": 200
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "maxLength": 100
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "handoff": {
          "type": "boolean",
          "default": false,
          "description": "Supports work item handoff between agents"
        },
        "batch": {
          "type": "boolean",
          "default": false,
          "description": "Supports batch operations"
        },
        "streaming": {
          "type": "boolean",
          "default": false,
          "description": "Supports streaming responses"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}